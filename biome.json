{
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"vcs": {
		"enabled": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"src/**/*.{ts,tsx,js,jsx}"
		]
	},
	"formatter": {
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}